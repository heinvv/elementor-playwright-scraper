{
  "name": "elementor-playwright-scraper",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "esbuild src/cli.ts --bundle --platform=node --outfile=dist/cli.js --external:playwright",
    "build:watch": "esbuild src/cli.ts --bundle --platform=node --outfile=dist/cli.js --external:playwright --watch",
    "scrape": "npx tsx src/cli.ts",
    "scrape:prod": "npm run build && node dist/cli.js"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "dotenv": "^16.3.1",
    "playwright": "^1.49.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "esbuild": "^0.24.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  }
}
